/* components/v-lucky-modal/index.wxss */
.gift-modal-container {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, .7);
    z-index: 9999;
}

.content-container {
    position: absolute;
    margin: auto;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 500rpx;
    height: 800rpx;
    opacity: 1;
    background-size: 100% 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
    font-size: 26rpx;
    z-index: 10000;
    border: 2px solid #E5C497;
    background-color: #fff;
}

.close {
    width: 35px;
    height: 35px;
    position: absolute;
    bottom: -15%;
    left: 45%;
}

.end-title {
    font-size: 20px;
    font-weight: 500;
    width: 100%;
    text-align: center;
    margin-top: 300rpx;
}

.end-desrciption {
    width: 100%;
    text-align: center;
    margin-bottom: 350rpx;
}
.time{
    margin-top: 10rpx;
}