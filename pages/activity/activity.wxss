/* pages/activity/activity.wxss */
.container {
  position: relative;
  font-size: 32rpx;
  box-sizing: border-box;
  height: 100vh;
  overflow: auto;
}

.common-content-wrapper {
  padding: 30rpx 60rpx;
  background-size: cover;
  background-position: center;
  background-repeat: repeat;
  background-color: #f1d2b1;
}

.title__main {
  font-size: 40rpx;
  font-weight: bold;
}

.title--center {
  text-align: center;
}

.main-title-wrapper {
  padding: 30rpx 0;
}

.banner {
  text-align: center;
}

.banner {
  padding-bottom: 52%;
  height: 0;
  background-size: cover;
  background-position: 0 0;
}

.desc {
  margin-bottom: 30rpx;
  padding: 40rpx 0rpx;
  font-size: 28rpx;
  /* background-color: #e0cbae; */
  /* border: 4rpx solid #6e4724; */
  border-radius: 10rpx;
  line-height: 1.5em;
}

.join-zone {
  /* margin-bottom: 30rpx; */
  text-align: center;
}

.join-zone button {
  padding: 40rpx 60rpx;
  /* box-shadow: 4rpx 8rpx 30rpx rgba(0, 0, 0, 0.25); */
  background-color: #e0ac77;
  color: #333;
  box-shadow: inset 0 0 0 4rpx hsl(0deg 0% 0% / 25%), inset 0 4px 0 hsl(0deg 0% 100% / 10%), inset 0 1.2em 0 hsl(0deg 0% 100% / 5%), inset 0 -0.2em 0 hsl(0deg 0% 100% / 10%), inset 0 -0.25em 0 hsl(0deg 0% 0% / 50%), 0 0.25em 0.25em hsl(0deg 0% 0% / 10%);
}

.join-zone .inner-btn-text {
  white-space: pre;
  line-height: 1.5em;
  font-size: 30rpx;
}

.register-zone {
  padding: 10rpx 0;
}

/*checkbox大小*/
.register-zone checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  background-color: #fff;
  border: 1px solid #8e582c;
  border-radius: 50%;
}

/*checkbox选中后图标样式  */
.register-zone checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 28rpx;
  color: #53261b;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.register-zone .text {
  font-size: 24rpx;
}

.register-zone .text:not(:last-child) {
  margin-right: 8rpx;
}

.register-zone .text--underline {
  text-decoration: underline;
}

.rule-content-wrapper {
  border-top: 4rpx solid #6e4724;
  margin-top: 30rpx;
  padding: 40rpx 0rpx;
  font-size: 24rpx;
  /* background-color: #f4dcc5; */
  /* border: 4rpx solid #6e4724; */
  /* border-radius: 10rpx; */
  line-height: 1.5em;
}

.rule-content-wrapper view:not(:last-child) {
  margin-bottom: 20rpx;
}

/* modal box */
.modal {
  box-sizing: border-box;
  padding: 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.336);
  color: #cd9637;
  /* box-shadow: 4rpx 8rpx 30rpx rgba(0, 0, 0, 0.25); */
  text-align: center;
}

.modal .content {
  padding: 80rpx 20rpx;
  position: fixed;
  z-index: 7;
  top: 50%;
  left: 50%;
  width: 50vw;
  transform: translate(-50%, -50%);
  font-size: 28rpx;
  background-color: #a67f58;
  color: #fff;
  border: 4rpx solid #6e4724;
  border-radius: 10rpx;
  line-height: 1.5em;
  /* line-height: 1.5em; */
}

.modal .btn {
  padding: 10rpx 40rpx;
  position: fixed;
  z-index: 8;
  bottom: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #673d12;
  border: 4rpx solid #6e4724;
  border-radius: 10rpx;
}

.modal .btn text {
  white-space: nowrap;
}

.modal__member-bind .icon-close {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 32rpx;
  height: 32rpx;
}

.modal__member-bind .title {
  font-size: 32rpx;
  display: block;
}

.modal__member-bind .sub-title {
  display: inline-block;
  font-size: 24rpx;
}

.modal__member-bind .btn {
  padding: 0 40rpx;
}

.modal__member-bind button {
  padding: 0;
  display: inline;
  /* line-height: 1em; */
  white-space: nowrap;
  background: transparent;
  color: #fff;
  font-size: 28rpx;
}
.modal__success-join .content{
  padding: 40rpx 20rpx;
}
.modal__success-join text {
  display: block;
}

.drawer {
  /* padding: 30rpx; */
  position: fixed;
  z-index: 9;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 450rpx;
  background-color: #efdac2;
  border-top: 4rpx solid #6e4724;
  transition: all .5s;
}

.drawer--up {
  bottom: 0;
}

.drawer--down {
  bottom: -450rpx;
}

.drawer .icon {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 32rpx;
  height: 32rpx;
}

/* 预约报名picker设置 */
.join-form-set-zone .tip-title {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #cf9e6d;
}

.join-form-set-zone .val {
  padding-left: 40rpx;
  font-size: 28rpx;
  text-decoration: underline;
}

.join-form-set-zone .set-item:not(:last-child) {
  margin-bottom: 30rpx;
}

.join-form-set-zone button {
  margin-top: 30rpx;
  padding: 4rpx 80rpx;
  box-shadow: 4rpx 8rpx 30rpx rgba(0, 0, 0, 0.25);
  background-color: #8e582c;
  color: #fff;
}

.clickable-area-extend {
  position: relative;
}

.clickable-area-extend::after {
  content: '';
  position: absolute;
  top: -20px;
  right: -20px;
  bottom: -20px;
  left: -20px;
  /* background-color: teal; */
}

.blur {
  filter: blur(4rpx);
}