.xh_top {
    padding-top: 1px;
    width: 100%;
    height: 210rpx;
    background-size: 100% 100%;
    text-align: center;
    margin-bottom: 140rpx;
}

.xh_top image {
    margin-top: 120rpx;
    width: 200rpx;
    height: 200rpx;
}

.xh_integral_box {
    margin: 0 auto;
    width: 90%;
    height: 200rpx;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, .5);
    border-radius: 10px;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    margin-top: 50rpx;
}

.mgt200 {
    margin-top: 100rpx !important;
}

.xh_integral_tip {
    /* display: flex; */
    font-size: 28rpx;
    width: 80%;
    margin: 0 auto;
    height: 150rpx;
    text-align: right;
}

.xh_integral_tip p {
    line-height: 150rpx;
    letter-spacing: 1px;
    margin-left: 20rpx;
}

.xh_integral_tip1 p {
    color: #fff;
}

.xh_integral_tip image {
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top: 10rpx;
}

.xh_goto {
    width: 150rpx;
    height: 40rpx;
    display: block;
    background: #885535;
    font-size: 22rpx;
    line-height: 40rpx;
    text-align: center;
    color: #fff;
    letter-spacing: 1px;
    position: relative;
    left: 80%;
    top: -40rpx;
    border-radius: 2px;
}

.xh_tips {
    margin: 0 auto;
    width: 90%;
    color: #53261b;
    display: block;
    margin-top: 20rpx;
}

.xh_blackbg {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .7);
}

.xh_blackbg image {
    position: absolute;
    top: 50rpx;
    right: 30rpx;
    height: 150rpx;
    width: 70%;
}