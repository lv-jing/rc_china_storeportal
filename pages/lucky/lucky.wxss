/* pages/lucky/lucky.wxss */
.xh_top {
  padding-top: 1px;
  width: 100%;
  background-size: 100% 100%;
  text-align: center;
}

.xh_top image {
  margin-top: 150rpx;
  width: 220rpx;
  height: 220rpx;
}

.lucky-panel {
  padding: 20px 60px 10px 60px;
}

.lucky_friend {
  width: 210rpx;
  height: 40rpx;
  display: block;
  background: #885535;
  font-size: 22rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
  letter-spacing: 1px;
  border-radius: 10px;
}

.lucky_action {
  width: 240rpx;
  height: 80rpx;
  display: block;
  background: #885535;
  font-size: 25rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  letter-spacing: 1px;
  border-radius: 20px;
}

.text-center {
  margin: auto;
  display: block;
  width: 120px;
}

.show-ticket {
  text-align: center;
  padding: 10px 0px;
}

.lucky-table {
  margin-top: 20px;
}

.lucky-table image {
  width: 100%;
  height: 86px;
  margin-top: -8px;
}

.span8 {
  width: 33.33333333%;
  float: left;
  box-sizing: border-box;
  min-height: 1px;
}

.lucky-record {
  padding: 20px;
}

.lucky-record-panel {
  background-color: #fff;
  padding: 20px;
}

.lucky-record-text {
  color: #885535;
}

.lucky-btn-disabled {
  pointer-events: none !important;
  background: #d9d9d9 !important;
}

.lucky_rule {
  width: 160rpx;
  height: 50rpx;
  display: block;
  background: #885535;
  font-size: 22rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  letter-spacing: 1px;
  border-radius: 10px;
  position: absolute;
  top: 6%;
  left: -15px;
}
.jifen-tip {
  margin-left: 5px;
  margin-top: 10px;
  display: inline-block
}